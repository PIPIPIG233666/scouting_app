<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScannerFragment">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoFocusButtonColor="@android:color/holo_orange_dark"
        app:autoFocusButtonVisible="true"
        app:autoFocusButtonPaddingHorizontal="200dp"
        app:flashButtonColor="@android:color/holo_orange_dark"
        app:flashButtonVisible="false"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@android:color/holo_orange_dark"
        app:frameCornersRadius="0dp"
        app:frameCornersSize="50dp"
        app:frameSize="0.9"
        app:frameThickness="5dp"
        app:maskColor="#77000000">

    </com.budiyev.android.codescanner.CodeScannerView>

</FrameLayout>